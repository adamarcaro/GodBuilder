<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:id="@+id/godImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:padding="4dp"
            app:srcCompat="@drawable/ullr" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="67"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/godName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_norse"
                android:gravity="center_vertical"
                android:text="@string/ullr"
                android:textColor="?android:attr/editTextColor"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/godTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="@string/ullr_title"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/textStarter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="33"
            android:gravity="center_horizontal"
            android:text="Starter"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textRelics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="67"
            android:gravity="center_horizontal"
            android:text="Relics"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="18">

        <ImageButton
            android:id="@+id/imageStarterItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/no_item" />

        <ImageButton
            android:id="@+id/imageRelic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/no_item" />

        <ImageButton
            android:id="@+id/imageRelic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/no_item" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/nameStarter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="false"
            android:textColor="@color/almost_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nameRelic1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="false"
            android:textColor="@color/almost_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nameRelic2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="false"
            android:textColor="@color/almost_black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textFullBuild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Full build"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="18">

        <ImageButton
            android:id="@+id/imageItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/no_item" />

        <ImageButton
            android:id="@+id/imageItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/no_item" />

        <ImageButton
            android:id="@+id/imageItem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/no_item" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/nameItem1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="false"
            android:textColor="@color/almost_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nameItem2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="false"
            android:textColor="@color/almost_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nameItem3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="false"
            android:textColor="@color/almost_black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="18">

        <ImageButton
            android:id="@+id/imageItem4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/no_item" />

        <ImageButton
            android:id="@+id/imageItem5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/no_item" />

        <ImageButton
            android:id="@+id/imageItem6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@null"
            android:padding="7dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/no_item" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/nameItem4"
            android:layout_width="30px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="false"
            android:textColor="@color/almost_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nameItem5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="false"
            android:textColor="@color/almost_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nameItem6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="false"
            android:textColor="@color/almost_black"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>

