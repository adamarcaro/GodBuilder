<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="10dp">
    <ToggleButton
        android:id="@+id/celtic"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/toggle_celtic"
        android:textOn=""
        android:textOff=""
        android:text="" />
    <ToggleButton
        android:layout_marginLeft="5dp"
        android:id="@+id/chinese"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/celtic"
        android:background="@drawable/toggle_chinese"
        android:textOn=""
        android:textOff=""
        android:text="" />
    <ToggleButton
        android:layout_marginLeft="5dp"
        android:id="@+id/mayan"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/chinese"
        android:background="@drawable/toggle_mayan"
        android:textOn=""
        android:textOff=""
        android:text="" />
    <ToggleButton
        android:layout_marginLeft="5dp"
        android:id="@+id/japanese"
        android:layout_width="27dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/mayan"
        android:background="@drawable/toggle_japanese"
        android:textOn=""
        android:textOff=""
        android:text="" />
    <ToggleButton
        android:layout_marginLeft="5dp"
        android:id="@+id/greek"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/japanese"
        android:background="@drawable/toggle_greek"
        android:textOn=""
        android:textOff=""
        android:text="" />
    <ToggleButton
        android:layout_marginRight="5dp"
        android:id="@+id/hindu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/celtic"
        android:background="@drawable/toggle_hindu"
        android:textOn=""
        android:textOff=""
        android:text="" />
    <ToggleButton
        android:layout_marginRight="5dp"
        android:id="@+id/egyptian"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/hindu"
        android:background="@drawable/toggle_egyptian"
        android:textOn=""
        android:textOff=""
        android:text="" />
    <ToggleButton
        android:layout_marginRight="5dp"
        android:id="@+id/roman"
        android:layout_width="23dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/egyptian"
        android:background="@drawable/toggle_roman"
        android:textOn=""
        android:textOff=""
        android:text=""/>
    <ToggleButton
        android:layout_marginRight="5dp"
        android:id="@+id/norse"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/roman"
        android:background="@drawable/toggle_norse"
        android:textOn=""
        android:textOff=""
        android:text=""/>
</RelativeLayout>